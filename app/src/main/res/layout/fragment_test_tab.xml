<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/testFragmentBackground"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="15dp"
            android:elevation="4dp"
    >


        <Button
                android:id="@+id/pronounceTestButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="発音をテストする"
                android:textSize="24dp"
                android:background="@android:color/transparent"

        />

        <Button
                android:id="@+id/checkedWordsButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="チェックした単語だけ"
                android:textSize="24dp"
                android:background="@android:color/transparent"
                android:visibility="gone"


        />


    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="15dp"
            android:elevation="4dp"
            android:layout_weight="1">


        <Button
                android:id="@+id/meaningTestButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="意味をテストする"
                android:textSize="24dp"
                android:background="@android:color/transparent"
        />

        <Button
                android:id="@+id/allWordsButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="全ての単語"
                android:textSize="24dp"
                android:background="@android:color/transparent"
                android:visibility="gone"


        />


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>