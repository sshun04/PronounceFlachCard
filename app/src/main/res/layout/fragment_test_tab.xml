<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/testFragmentBackground"
        android:layout_width="match_parent" android:layout_height="match_parent">


    <com.google.android.material.button.MaterialButton
            android:id="@+id/pronounceTestButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="30dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            app:layout_constraintBottom_toBottomOf="@id/guideline1"
            app:layout_constraintEnd_toStartOf="@id/checkedWordsButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:text="発音テスト"
            android:textSize="24dp"
            android:elevation="4dp"
            app:icon="@drawable/outline_volume_up_black_36dp"
            app:iconTint="@color/colorPrimary"
            app:iconSize="24dp"
            app:iconGravity="textStart"
    />


    <com.google.android.material.button.MaterialButton
            android:id="@+id/checkedWordsButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_marginEnd="30dp"
            app:layout_goneMarginLeft="30dp"
            android:layout_marginVertical="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline1"
            app:layout_constraintStart_toEndOf="@id/pronounceTestButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="チェックした単語だけ"
            android:textSize="24dp"
            android:elevation="4dp"
    />

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline1"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="15dp"
            android:elevation="4dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp">


        <Button

                android:id="@+id/meaningTestButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="意味テスト"
                android:textSize="24dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"

        />

        <Button
                android:id="@+id/allWordsButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="全ての単語"
                android:textSize="24dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:visibility="gone"


        />


    </com.google.android.material.card.MaterialCardView>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline1"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            android:orientation="vertical" app:layout_constraintGuide_begin="329dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/testBackButton"
            app:layout_constraintStart_toStartOf="@id/guideline3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95"
            android:layout_width="56dp"
            android:layout_height="56dp"
    />


</androidx.constraintlayout.widget.ConstraintLayout>